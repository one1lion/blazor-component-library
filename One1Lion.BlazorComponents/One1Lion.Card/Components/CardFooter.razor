@namespace One1Lion.Card

@inherits ContainerChildElement<ICard>

@code {
    [Parameter] public string AddCssClasses { get; set; }

    protected override void Register(ICard parent)
    {
        parent.SetFooter(this);
    }

    protected override string ContainerCssClass => $"o1l-card-footer{(string.IsNullOrWhiteSpace(AddCssClasses) ? string.Empty : $" {AddCssClasses}")}";
}
