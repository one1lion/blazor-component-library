@namespace One1Lion.Card

@inherits FlexibleContainerChildElement<ICard>

@code {
    [Parameter] public string AddCssClasses { get; set; }

    protected override void Register(ICard parent)
    {
        parent.SetHeader(this);
    }

    protected override string ContainerCssClass => $"o1l-card-header{(string.IsNullOrWhiteSpace(AddCssClasses) ? string.Empty : $" {AddCssClasses}")}";
}
