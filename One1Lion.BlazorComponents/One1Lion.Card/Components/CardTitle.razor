@namespace One1Lion.Card

@inherits FlexibleContainerChildElement<ICardBody>

@code {
    [Parameter] public string AddCssClasses { get; set; }

    protected override void Register(ICardBody parent)
    {
        parent.SetTitle(this);
    }

    protected override string ContainerCssClass => $"o1l-card-title{(string.IsNullOrWhiteSpace(AddCssClasses) ? string.Empty : $" {AddCssClasses}")}";

    public override ElementType ElementType { get; set; } = ElementType.H5;

}
